@model Network.Presentation.Models.LoginModels

@{
    ViewBag.Title = "Informações ao Usuário";
}

@*<blockquote>
    <p>@ViewBag.Title</p>
    <small>Informações <cite title="Source Title">do Usuário</cite></small>
</blockquote2015!

<div class="form-horizontal">
    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="form-group">
            @Html.LabelFor(x => x.NomeFuncionario, new { @class = "col-lg-2 control-label", @for = "Nome" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.NomeFuncionario, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">CPF</label>
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Cpf, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "col-lg-2 control-label", @for = "Email" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Sexo, new { @class = "col-lg-2 control-label", @for = "Sexo" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Sexo, new { @class = "form-control", @disabled = "disabled", @placeholder = "Sexo" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Endereco, new { @class = "col-lg-2 control-label", @for = "Endereco" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Endereco, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Rg, new { @class = "col-lg-2 control-label", @for = "RG" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Rg, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Fone1, new { @class = "col-lg-2 control-label", @for = "Telefone" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Fone1, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Status, new { @class = "col-lg-2 control-label", @for = "Ativo" })
            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Status, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a href="@Url.Action("index", "home")" class="btn btn-warning">Voltar</a>
            </div>
        </div>
    </fieldset>
</div>



