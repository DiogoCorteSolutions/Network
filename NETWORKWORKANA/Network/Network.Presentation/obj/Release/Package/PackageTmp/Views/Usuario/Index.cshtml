@model IEnumerable<Network.Presentation.Models.UsuarioModels>
@{
    ViewBag.Title = "Lista de Usuário";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo!!!</cite></small>
</blockquote>

<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>

}
else if (TempData["msgsuccesso"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Nome</th>
            <th style="text-align: center;">CPF</th>
            <th style="text-align: center;">Endereço</th>
            <th style="text-align: center;">Telefone</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.NomeFuncionario</td>
                @{ string CPFFormatado = String.Format(@"{0:###.###.###-##}", item.Cpf);}
                <td>@CPFFormatado</td>
                <td>@item.Cidade</td>
                <td>@item.Fone1</td>
                <td>
                    <a href="@Url.Action("editar", "usuario", new { id = item.IdUsuario })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("visualizar", "usuario", new { id = item.IdUsuario })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-8 col-lg-offset-0">
        <form method="get" action="@Url.Action("Create", "usuario")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("index", "home")" class="btn btn-warning">Voltar</a>
        </form>
    </div>
</div>

