@model IEnumerable<Network.Presentation.Models.ComposicaoModels>
@{
    ViewBag.Title = "Lista de Composição";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo!!!</cite></small>
</blockquote>

<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>

}
else if (TempData["msgsuccesso"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">NOME/COMPOSIÇÃO</th>
            <th style="text-align: center;">DESCRIÇÃO</th>
            <th style="text-align: center;">QUANTIDADE</th>
            <th style="text-align: center;">PESO</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.NomeComposicao</td>
                <td>@item.Descricao</td>
                <td>@item.Quantiomposicao</td>
                <td>@item.Peso</td>
                <td>
                    <a href="@Url.Action("edit", "composicao", new { id = item.IdComposicao })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("excluir", "composicao", new { id = item.IdComposicao })" data-toggle="tooltip" title="Excluir"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>

            </tr>
        }
    </tbody>
</table>
