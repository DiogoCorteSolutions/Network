        <input type="checkbox" name="spc" value="spc" />SPC:
        <br />
        <input type="checkbox" name="serasa" value="serasa" />SERASA:
        <br />
        <input type="checkbox" name="telecheque" value="telecheque" />TELECHEQUE:
        <br />
        <input type="checkbox" name="bloquieado" value="bloquieado" />BLOQUEIADO:
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label>CÓD MUNICIPIO</label>
            @Html.TextBoxFor(x => x.CodMunicipio, new { @class = "form-control", placeholder = "", required = "required" })
        </div>
