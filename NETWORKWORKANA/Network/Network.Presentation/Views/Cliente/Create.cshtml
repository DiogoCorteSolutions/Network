    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>CRÉDITO:</label>
            @Html.TextBoxFor(x => x.Credito, new { @class = "form-control", @placeholder = "", @onchange = "mascaraInteiro(formCadastro.Credito);", @maxlength = "9" })
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>TIPO/REGIÃO:</label>
            @Html.TextBoxFor(x => x.TipoRegiao, new { @class = "form-control", placeholder = "", required = "required" })
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label>CLASSIFICAÇÃO:</label>
            @Html.TextBoxFor(x => x.Classificacao, new { @class = "form-control", placeholder = "", required = "required" })
        </div>
    </div>
